<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dreamteam.hola.dao.MemberMapper">


    <sql id="memberColumns">
        member_id,
        nickname,
        password,
        email,
        profile_image,
        role,
        reg_date,
        mod_date,
        withdrawal_yn,
        withdrawal_date,
        social_type
    </sql>

    <select id="findByNickname" parameterType="String" resultType="Member">
        SELECT
        <include refid="memberColumns"/>
        FROM
        member
        WHERE
        nickname = #{nickname}
    </select>

    <select id="findByEmail" parameterType="String" resultType="Member">
        SELECT
        <include refid="memberColumns"/>
        FROM
        member
        WHERE
        email=#{email}
    </select>

    <insert id="signup" parameterType="MemberDto">
        insert into member (nickname, password, email, profile_image, role)
        values (#{nickname}, #{password}, #{email}, #{profileImage}, #{role})
    </insert>

    <select id="findById" resultType="MemberDto">
        select
        <include refid="memberColumns"/>
        from member
        where member_id = #{id};
    </select>

    <update id="update">
        update
            member
        set nickname    = #{nickname},
            email       = #{email},
            social_type = #{socialType}
        where member_id = #{memberId}
    </update>
</mapper>

